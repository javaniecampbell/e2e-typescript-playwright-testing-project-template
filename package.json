{
  "name": "e2e-typescript-playwright-testing-project-template",
  "version": "1.0.0",
  "description": "E2E testing project using Playwright and Cucumber",
  "main": "index.js",
  "scripts": {
    "test:e2e": "cucumber-js",
    "test:e2e:smoke": "cucumber-js --tags @smoke",
    "test:e2e:regression": "cucumber-js --tags @regression",
    "test:e2e:parallel": "cucumber-js --parallel 2",
    "test:e2e:retry": "cucumber-js --retry 2",
    "report:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "report:open": "allure open ./allure-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "update-deps": "ncu -u && npm install",
    "precommit": "npm run lint && npm run type-check",
    "start:test-server": "node test-server.js",
    "docker:build": "docker build -t e2e-testing-project .",
    "docker:run": "docker run e2e-testing-project npm run test:e2e"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "cucumber"
  ],
  "author": "Javanie Campbell",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.8.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.45.1",
    "@types/cucumber": "^7.0.0",
    "@types/node": "^20.14.10",
    "playwright": "^1.45.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "allure-commandline": "^2.29.0",
    "allure-cucumberjs": "^3.0.0-beta.6",
    "eslint": "^9.6.0",
    "npm-check-updates": "^16.14.20"
  }
}
